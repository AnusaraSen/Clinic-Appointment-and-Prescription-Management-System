/* InventoryManagerProfile.css - Blue Theme with Sidebar Layout */
.main-content-with-sidebar .inventory-manager-profile-container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f8fafc;
  font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  --primary-color: #2563eb;
  --primary-hover: #1d4ed8;
  --primary-light: #dbeafe;
}

.main-content-with-sidebar .inventory-manager-profile-container .profile-wrapper {
  max-width: 1200px;
  margin: 0 auto;
  padding: 24px;
  display: flex;
  flex-direction: column;
  gap: 24px;
}

/* Profile Header Card */
.main-content-with-sidebar .inventory-manager-profile-container .profile-header-card {
  background: white;
  border-radius: 12px;
  padding: 32px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  border: 1px solid #e2e8f0;
}

.main-content-with-sidebar .inventory-manager-profile-container .profile-header-content {
  display: flex;
  align-items: flex-start;
  gap: 24px;
  margin-bottom: 24px;
}

.main-content-with-sidebar .inventory-manager-profile-container .profile-avatar-section {
  position: relative;
}

.main-content-with-sidebar .inventory-manager-profile-container .profile-avatar-image {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  object-fit: cover;
  border: 4px solid var(--primary-light);
}

.main-content-with-sidebar .inventory-manager-profile-container .avatar-edit-button {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: var(--primary-color);
  color: white;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: background-color 0.2s;
}

.main-content-with-sidebar .inventory-manager-profile-container .avatar-edit-button:hover {
  background: var(--primary-hover);
}

.inventory-manager-profile-container .profile-info-section {
  flex: 1;
}

.inventory-manager-profile-container .profile-name {
  margin: 0 0 8px 0;
  font-size: 32px;
  font-weight: 700;
  color: #1a202c;
}

.inventory-manager-profile-container .profile-position {
  margin: 0 0 4px 0;
  font-size: 18px;
  font-weight: 600;
  color: var(--primary-color);
}

.inventory-manager-profile-container .profile-department {
  margin: 0 0 12px 0;
  font-size: 16px;
  color: #64748b;
}

.inventory-manager-profile-container .profile-status {
  display: flex;
  align-items: center;
}

.inventory-manager-profile-container .status-badge {
  background: var(--primary-light);
  color: var(--primary-color);
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 14px;
  font-weight: 500;
}

.inventory-manager-profile-container .profile-bio-section {
  border-top: 1px solid #e2e8f0;
  padding-top: 24px;
}

.inventory-manager-profile-container .bio-title {
  margin: 0 0 12px 0;
  font-size: 18px;
  font-weight: 600;
  color: #1a202c;
}

.inventory-manager-profile-container .bio-text {
  margin: 0;
  line-height: 1.6;
  color: #64748b;
}

/* Main Content Card */
.inventory-manager-profile-container .profile-main-card {
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  border: 1px solid #e2e8f0;
  overflow: hidden;
}

/* Tab Navigation */
.inventory-manager-profile-container .tab-navigation {
  display: flex;
  background: #f8fafc;
  border-bottom: 1px solid #e2e8f0;
}

.inventory-manager-profile-container .tab-button {
  flex: 1;
  padding: 16px 24px;
  background: none;
  border: none;
  font-size: 16px;
  font-weight: 500;
  color: #64748b;
  cursor: pointer;
  transition: all 0.2s;
  border-bottom: 3px solid transparent;
}

.inventory-manager-profile-container .tab-button:hover {
  background: #f1f5f9;
  color: #334155;
}

.inventory-manager-profile-container .tab-button.tab-active {
  background: white;
  color: var(--primary-color);
  border-bottom-color: var(--primary-color);
}

/* Tab Content */
.inventory-manager-profile-container .tab-content {
  padding: 32px;
}

.inventory-manager-profile-container .section-header {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 24px;
  padding-bottom: 16px;
  border-bottom: 1px solid #e2e8f0;
}

.inventory-manager-profile-container .profile-icon {
  width: 24px;
  height: 24px;
  color: var(--primary-color);
}

.inventory-manager-profile-container .section-title {
  margin: 0;
  font-size: 20px;
  font-weight: 600;
  color: #1a202c;
}

/* Fields Container */
.inventory-manager-profile-container .fields-container {
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.inventory-manager-profile-container .field-row {
  display: flex;
  align-items: center;
  padding: 16px 0;
  border-bottom: 1px solid #f1f5f9;
}

.inventory-manager-profile-container .field-row:last-child {
  border-bottom: none;
}

.inventory-manager-profile-container .field-label {
  min-width: 200px;
  font-weight: 500;
  color: #374151;
  font-size: 14px;
}

.inventory-manager-profile-container .field-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.inventory-manager-profile-container .field-value {
  color: #1f2937;
  font-size: 14px;
}

.inventory-manager-profile-container .display-field-container {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
}

.inventory-manager-profile-container .edit-button {
  background: none;
  border: none;
  color: #6b7280;
  cursor: pointer;
  padding: 4px;
  border-radius: 4px;
  transition: all 0.2s;
}

.inventory-manager-profile-container .edit-button:hover {
  background: #f3f4f6;
  color: var(--primary-color);
}

/* Edit Field */
.inventory-manager-profile-container .edit-field-container {
  display: flex;
  align-items: center;
  gap: 8px;
  width: 100%;
}

.inventory-manager-profile-container .edit-input {
  flex: 1;
  padding: 8px 12px;
  border: 1px solid #d1d5db;
  border-radius: 6px;
  font-size: 14px;
  transition: border-color 0.2s;
}

.inventory-manager-profile-container .edit-input:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
}

.inventory-manager-profile-container .save-button {
  background: var(--primary-color);
  color: white;
  border: none;
  padding: 6px;
  border-radius: 4px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.2s;
}

.inventory-manager-profile-container .save-button:hover {
  background: var(--primary-hover);
}

.inventory-manager-profile-container .cancel-button {
  background: #ef4444;
  color: white;
  border: none;
  padding: 6px;
  border-radius: 4px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.2s;
}

.inventory-manager-profile-container .cancel-button:hover {
  background: #dc2626;
}

/* Settings Cards */
.inventory-manager-profile-container .settings-cards-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 24px;
}

.inventory-manager-profile-container .settings-card {
  background: white;
  border-radius: 12px;
  padding: 24px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  border: 1px solid #e2e8f0;
  transition: transform 0.2s, box-shadow 0.2s;
}

.inventory-manager-profile-container .settings-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
}

.inventory-manager-profile-container .settings-card-header {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 12px;
}

.inventory-manager-profile-container .settings-icon-container {
  width: 40px;
  height: 40px;
  background: var(--primary-light);
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.inventory-manager-profile-container .settings-icon {
  width: 20px;
  height: 20px;
  color: var(--primary-color);
}

.inventory-manager-profile-container .settings-card-title {
  margin: 0;
  font-size: 18px;
  font-weight: 600;
  color: #1a202c;
}

.inventory-manager-profile-container .settings-card-description {
  margin: 0 0 16px 0;
  color: #64748b;
  line-height: 1.5;
}

.inventory-manager-profile-container .settings-card-button {
  background: var(--primary-color);
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 6px;
  font-weight: 500;
  cursor: pointer;
  transition: background-color 0.2s;
  width: 100%;
}

.inventory-manager-profile-container .settings-card-button:hover {
  background: var(--primary-hover);
}

/* Responsive Design */
@media (max-width: 768px) {
  .inventory-manager-profile-container .profile-wrapper {
    padding: 16px;
    gap: 16px;
  }

  .inventory-manager-profile-container .profile-header-card {
    padding: 24px;
  }

  .inventory-manager-profile-container .profile-header-content {
    flex-direction: column;
    text-align: center;
    gap: 16px;
  }

  .inventory-manager-profile-container .profile-name {
    font-size: 24px;
  }

  .inventory-manager-profile-container .tab-navigation {
    flex-direction: column;
  }

  .inventory-manager-profile-container .tab-button {
    text-align: left;
  }

  .inventory-manager-profile-container .tab-content {
    padding: 24px;
  }

  .inventory-manager-profile-container .field-row {
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
  }

  .inventory-manager-profile-container .field-label {
    min-width: auto;
    font-weight: 600;
  }

  .inventory-manager-profile-container .field-content {
    width: 100%;
  }

  .inventory-manager-profile-container .settings-cards-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 480px) {
  .inventory-manager-profile-container .profile-avatar-image {
    width: 80px;
    height: 80px;
  }

  .inventory-manager-profile-container .avatar-edit-button {
    width: 24px;
    height: 24px;
  }
}
